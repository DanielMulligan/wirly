@using Wirly.web.Models
@model IEnumerable<Project>

@{
    ViewBag.Title = "Projects";
}

<h2>Projects</h2>

<div class="panel panel-primary">
    <div class="panel-heading">
        Projects
    </div>
    <table class="table table-striped">
        <tr>
            <th>Name</th>
        </tr>
        @if (Model.Count() == 0)
        {
            <tr>
                <td colspan="1" class="text-center">
                    No Projects
                </td>
            </tr>
        }
        else
        {
            foreach (var project in Model)
            {
                <tr>
                    <td>@project.Name</td>
                    <td>
                        @using (Html.BeginForm("Delete", "Project", new { id = project.Id }))
                        {
                            @Html.ActionLink("Edit", "Edit", new { id = project.Id }, new { @class = "btn btn-xs" })
                            <button class="btn btn-danger btn-xs" type="submit">Delete</button>
                        }
                    </td>
                </tr>
            }
        }
    </table>
</div>

@Html.ActionLink("Create", "Create", "Project", new { @class = "btn btn-primary" })


